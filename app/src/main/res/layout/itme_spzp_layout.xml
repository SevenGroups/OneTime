<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv4"
            android:layout_width="90px"
            android:layout_height="90px"
            app:roundedCornerRadius="100px"
            android:layout_margin="30px"/>
        <TextView
            android:id="@+id/t_ncc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:layout_toRightOf="@id/sdv4"
            android:layout_marginLeft="20px"
            android:layout_marginTop="30px"
            android:textColor="@color/colorh"/>
        <TextView
            android:id="@+id/itme_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t_ncc"
            android:text="2017-05-23 14:15"
            android:layout_toRightOf="@id/sdv4"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            android:textSize="17px"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/xj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="妹纸智斗抢劫男，看到最后笑死了~！"
        android:layout_margin="20px"
/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400px">

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/img_sp"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/biao" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/qzsgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="骑猪上高速"
            android:textColor="@color/colorl"
            android:layout_marginLeft="30px"
            android:layout_marginTop="10px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/qzsgs"
            android:layout_alignBottom="@+id/qzsgs"
            android:layout_centerHorizontal="true"
            android:text="：这个妹纸我认识，活在硬盘中" />
    </RelativeLayout>
</LinearLayout>
