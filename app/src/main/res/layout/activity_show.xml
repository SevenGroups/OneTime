<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.bw.com.onetimedemo.ShowActivity">
    <!--主页面的内容  ctrl+alt+l 格式化代码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main"
        >
        <include layout="@layout/head_layout"/>

        <FrameLayout
            android:id="@+id/zhan"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

        </FrameLayout>

        <RadioGroup
            android:id="@+id/gr"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/shouye"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#1313FF"
                android:button="@null"
                android:gravity="center"
                android:padding="10px"
                android:checked="true"
                android:drawableTop="@drawable/tuijian_selector"
                android:text="推荐" />

            <RadioButton
                android:id="@+id/zixuan"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="10px"
                android:drawableTop="@drawable/dz_selector"
                android:text="段子" />

            <RadioButton
                android:id="@+id/hangqing"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="10px"
                android:drawableTop="@drawable/sp_selector"

                android:text="视频" />



        </RadioGroup>
    </LinearLayout>

    <!---菜单内容
   android:layout_gravity="start":菜单在左边  end 菜单在右边
   侧滑菜单一般不要超过 320dp

   -->
    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="400px"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#888">

<include layout="@layout/side_pull_layout"/>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="380px"
            android:id="@+id/recycler_view"
            android:layout_below="@+id/sdv"></android.support.v7.widget.RecyclerView>
<TextView
    android:id="@+id/text_yjms"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="   夜间模式"
    android:layout_marginTop="60px"
    android:layout_below="@+id/recycler_view"
    />
     <RadioGroup
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/radio_group1">
         <RadioButton
             android:id="@+id/radio_wdzp"
             android:layout_width="0px"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="我的作品"/>
         <RadioButton
             android:id="@+id/radio_sz"
             android:layout_width="0px"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:text="设置"/>
     </RadioGroup>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
